{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2022"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "sourceMap": true
  },
  "include":["src/**/*.ts", "src/index.ts"]
}
